<resources>

    <style name="Base.Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#49bb79</item>
        <item name="colorOnPrimary">#ffff63</item>
        <!--colorPrimaryDark在可折叠的toolbar时不要设置透明度，否则隐约看见折叠的控件-->
        <item name="colorPrimaryDark">#005d2b</item>
        <item name="colorOnSurface">#de000000</item>
        <item name="colorAccent">#005d2b</item>
        <item name="colorSurface">#fafafa</item>
        <item name="colorSecondary">#ffff63</item>
        <!--android:colorBackground有个bug，必须指定color的资源，不能是color的RGB数值-->
        <item name="android:colorBackground">@color/sunflower_green_500</item>
    </style>

    <style name="Theme.AppTheme" parent="Base.Theme.AppTheme"/>

    <style name="Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.AppTheme.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="ShapeAppearance.AppTheme.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.FAB" parent="ShapeAppearance.MaterialComponents.SmallComponent"/>

</resources>
